<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.RegisterController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Register"/>
    <TextField fx:id="newUsername" promptText="New Username"/>
    <TextField fx:id="newEmail" promptText="Email"/>
    <PasswordField fx:id="newPassword" promptText="New Password"/>
    <Button text="Submit" onAction="#handleSubmit"/>
</VBox>
