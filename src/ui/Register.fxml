<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" styleClass="vbox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.RegisterController">
    <stylesheets>
        <String fx:value="/ui/styles.css"/>
    </stylesheets>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Register" styleClass="title-label"/>
    <Label text="Username"/>
    <TextField fx:id="newUsername" promptText="Enter username"/>
    <Label text="Email"/>
    <TextField fx:id="newEmail" promptText="Enter email"/>
    <Label text="Password"/>
    <PasswordField fx:id="newPassword" promptText="Enter password"/>
    <Button text="Submit" onAction="#handleSubmit" styleClass="button"/>
</VBox>